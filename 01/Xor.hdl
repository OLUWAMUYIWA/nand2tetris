/**
 * Exclusive-or gate:
 * out = not (a == b)
 */
// xor(a,b) = (a | b) & ~(a & b)
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Or(a=a, b=b, out=orAB);
    And(a=a, b=b, out=andAB);
    Not(in=andAB, out=negAnd);
    And(a=orAB b=negAnd, out=out);
}